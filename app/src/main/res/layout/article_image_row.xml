<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="news_article"
            type="com.rosen.jambo.views.articles.Article" />
    </data>

    <android.support.v7.widget.CardView
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/root"
        app:cardPref="@{news_article.title}"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:maxHeight="300dp"
                android:id="@+id/articleImage"
                app:imageUrl="@{news_article.urlToImage}"
                android:background="@color/dividerColor"
                android:scaleType="centerCrop" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/article"
                app:textPref="@{news_article.title}"
                android:typeface="sans"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:text="@{news_article.title}" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:paddingEnd="0dp"
                    android:paddingStart="@dimen/activity_horizontal_margin">

                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:text="@{news_article.author}" />


                    <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{news_article.publishedAt}"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
